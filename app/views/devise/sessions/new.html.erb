<h1 class="text-center"><%= t('.sign_in') -%></h1>
<%= render 'shared/form_errors', inst: resource -%>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "col-12 col-md-9 col-lg-7 col-xl-6 mx-auto "}) do |f| -%>
  <div class="form-group">
    <%= f.label :email, attr_name(:email, resource) -%>
    <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" -%>
  </div>
  <div class="form-group">
    <%= f.label :password, attr_name(:password, resource) -%>
    <%= f.password_field :password, class: "form-control", autocomplete: "current-password" -%>
  </div>
  <%- if devise_mapping.rememberable? -%>
    <div class="form-check">
      <%= f.check_box :remember_me -%>
      <%= f.label :remember_me, attr_name(:remember_me, resource) -%>
    </div>
  <%- end -%>
  <div class="form-group">
    <%= f.submit t('.sign_in'), class: "btn btn-primary" -%>
  </div>
  <%= render "devise/shared/links" -%>
<%- end -%>
