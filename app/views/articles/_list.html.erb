<aside class="row">
  <div class="col-12 col-lg-7 d-flex">
    <div class="r-16-9 my-auto shadow-sm">
      <%= article_image article, class: "abs-cover text-truncate text-wrap", alt: article.image_caption -%>
    </div>
  </div>
  <div class="col-12 col-lg-5 order-1">
    <h1 class="h2 font-weight-bold mt-2"><%= article_link article, class: "text-body" -%></h1>
    <div class="mt-2">
      <div class="multiline-text"><%= truncate_text article.content, 200 -%></div>
    </div>
    <div>
      <span>
        <span class="iconify" data-icon="ri:user-fill" data-inline="false"></span>
        <%= t("misc.article.by") -%>
        <%= article_author article -%>
      </span>
    </div>
    <div>
      <span>
        <span class="iconify" data-icon="ri:calendar-fill" data-inline="false"></span>
        <%= t("misc.article.on_date") -%>
        <%= l(article.created_at) -%>
      </span>
    </div>
  </div>
</aside>
<hr class="w-100 my-4">
