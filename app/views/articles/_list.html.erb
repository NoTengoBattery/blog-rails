<div class="row">
  <div class="col-7">
    <%= article_image(article, class: "img-fluid article-cover-index", alt: article.image_caption) %>
  </div>
  <aside class="col-5 order-1">
    <h1 class="mt-2"><%= article_link(article, class: "text-body") %></h1>
    <div class="mt-2">
      <div class="multiline-text"><%= truncate_text(article.content, 200) %></div>
    </div>
    <div>
      <span>
        <span class="iconify" data-icon="ri:user-fill" data-inline="false"></span>
        <%= t("misc.article.by") %>
        <%= article_author(article) %>
      </span>
    </div>
    <div>
      <span>
        <span class="iconify" data-icon="ri:calendar-fill" data-inline="false"></span>
        <%= t("misc.article.on_date") %>
        <%= l(article.created_at) %>
      </span>
    </div>
  </aside>
</div>
<hr class="w-100">
