<%= form_with(model: article) do |form| %>
  <%= render 'shared/form_errors', inst: article %>
  <div class="form-group">
    <%= form.label :title, attr_name(:title, article) %>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :image, attr_name(:image, article) %>
    <%= form.file_field :image, class: "form-control-file" %>
  </div>
  <div class="form-group">
    <%= form.label :image_caption, attr_name(:image_caption, article) %>
    <%= form.text_field :image_caption, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :content, attr_name(:content, article) %>
    <%= form.text_area :content, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.submit t(".submit"), class: "btn btn-primary" %>
  </div>
<% end %>
